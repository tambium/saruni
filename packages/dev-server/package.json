{
  "name": "@saruni/dev-server",
  "version": "0.0.8",
  "files": [
    "dist"
  ],
  "bin": {
    "ds": "./dist/index.js"
  },
  "publishConfig": {
    "access": "public"
  },
  "types": "dist/index.d.ts",
  "module": "src/index.ts",
  "main": "dist/index.js",
  "scripts": {
    "build": "rm -rf dist && babel --extensions \".js,.ts\" src --out-dir dist --plugins @babel/plugin-transform-modules-commonjs",
    "serve": "yarn node dist/index.js",
    "dev": "yarn build && yarn serve",
    "build:watch": "nodemon --watch src --ext 'js,ts,tsx' --ignore dist --exec 'yarn dev'",
    "release": "lerna publish from-package"
  },
  "devDependencies": {
    "@babel/cli": "^7.8.4",
    "@babel/core": "^7.9.6",
    "@babel/plugin-proposal-class-properties": "^7.8.3",
    "@babel/plugin-transform-modules-commonjs": "^7.9.6",
    "@babel/preset-env": "^7.9.6",
    "@babel/preset-typescript": "^7.9.0",
    "@types/aws-lambda": "^8.10.51",
    "@types/body-parser": "^1.19.0",
    "@types/chokidar": "^2.1.3",
    "@types/cors": "^2.8.6",
    "@types/execa": "^2.0.0",
    "@types/express": "^4.17.6",
    "@types/node": "^14.0.5",
    "@types/require-dir": "^1.0.1"
  },
  "dependencies": {
    "@babel/plugin-proposal-decorators": "^7.10.1",
    "@babel/register": "^7.10.5",
    "@saruni/internal": "^0.0.7",
    "body-parser": "^1.19.0",
    "chalk": "^4.1.0",
    "chokidar": "^3.4.0",
    "cors": "^2.8.5",
    "execa": "^4.0.2",
    "express": "^4.17.1",
    "nodemon": "^2.0.4",
    "qs": "^6.9.4",
    "require-dir": "^1.2.0"
  },
  "gitHead": "046fe47d958dc1f468ef558ff224446f20601c7b"
}
